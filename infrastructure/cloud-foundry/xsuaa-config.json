{
  "xsappname": "sapframework",
  "tenant-mode": "shared",
  "description": "SAP GRC Framework Multi-Tenant Application",
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Administrator access"
    },
    {
      "name": "$XSAPPNAME.TenantAdmin",
      "description": "Tenant administrator access"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "Regular user access"
    }
  ],
  "role-templates": [
    {
      "name": "Administrator",
      "description": "System administrator",
      "scope-references": [
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "name": "TenantAdministrator",
      "description": "Tenant administrator",
      "scope-references": [
        "$XSAPPNAME.TenantAdmin"
      ]
    },
    {
      "name": "User",
      "description": "Regular user",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://sapframework-api.cfapps.sap.hana.ondemand.com/**"
    ]
  }
}
