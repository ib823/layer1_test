{
  "name": "@sap-framework/api",
  "version": "1.0.0",
  "description": "SAP Framework REST API Layer",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
